generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Order {
    id Int @id @default(autoincrement())

    fullName    String
    email       String
    phoneNumber String
    idnp        String
    bornDate    DateTime
    totalAmount Int
    status      OrderStatus @default(PENDING)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum OrderStatus {
    PENDING
    SUCCEED
    CANCELLED
}
